# Orchestrator AI Agent - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Environment
# ============================================
ENVIRONMENT=development  # development, staging, production

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Orchestrator AI Agent
API_VERSION=1.0.0

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# Optional: Full Redis URL (overrides above settings)
# REDIS_URL=redis://localhost:6379/0

# ============================================
# Database Configuration
# ============================================
# SQLite (default for development)
# DATABASE_URL=sqlite:///./orchestrator.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://orchestrator:password@localhost:5432/orchestrator
# Or with async driver:
# DATABASE_URL=postgresql+asyncpg://orchestrator:password@localhost:5432/orchestrator

# ============================================
# Agent Configuration
# ============================================
AGENT_TIMEOUT=300  # seconds
MAX_CONCURRENT_TASKS=10
MAX_RETRIES=3
RETRY_DELAY=1  # seconds

# ============================================
# Security
# ============================================
# API Key for authentication
API_KEY=your-api-key-here

# Secret key for JWT and encryption
SECRET_KEY=your-secret-key-change-in-production

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
# Optional: Log file path
# LOG_FILE=./logs/orchestrator.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ============================================
# Monitoring & Observability
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================
# LLM Configuration (for specialized agents)
# ============================================
# OpenAI API Key (for Code Generation, Research, Analysis agents)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (optional, for Claude models)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================
# Docker Compose Overrides (optional)
# ============================================
# POSTGRES_PASSWORD=your-secure-password
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3000
# GRAFANA_PASSWORD=admin

# Google Gemini API Key (for Gemini models)
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key-here
